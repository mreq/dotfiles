#!/bin/bash
spritesMoveAround() {
  checkDir() {
    if [[ ! -d "$@" ]]; then
      echo "No $*, exiting."
      exit 1
    fi
  }
  checkDir 'sprites@1x' || exit 1
  checkDir 'sprites@2x' || exit 1

  file_mask=$*
  if [[ ! $file_mask ]]; then
    file_mask="*.png"
  fi

  for file in $file_mask; do
    if [[ $file == *'@2x'* ]]; then
      folder='sprites@2x'
      name=${file/@2x/}
    else
      folder='sprites@1x'
      name=${file/@1x/}
    fi
    # ico- ->
    name=${name/ico-/}
    # -hover -> __hover
    name=${name/-hover/__hover}
    mv "$file" "$folder/$name"
    echo "mv $file $folder/$name"
  done
}

if [[ -d app/assets/images ]]; then
  ( cd app/assets/images || exit 0; spritesMoveAround "$@" )
else
  spritesMoveAround "$@"
fi
