#!/bin/bash
actions=(
  'suspend'
  'screen'
  'reboot'
  'shutdown'
  'logout'
  'restart'
  'poweroff'
)

select_action() {
  case $1 in
    suspend )

      systemctl suspend ;;
    reboot|restart )
      systemctl reboot ;;
    shutdown|poweroff )
      systemctl poweroff ;;
    logout )
      swaymsg exit ;;
  esac
}

if [[ $1 ]]; then
  select_action "$1"
else
  select_action "$( printf "%s\n" "${actions[@]}" | rofi -dmenu -i -theme base16-mreq-red )"
fi
