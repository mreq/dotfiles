#!/bin/bash
options=(
  'guess'
  'HDMI'
  'HDMI-DVI'
  'DVI'
  'VGA'
  'notebook'
  'notebook-HDMI'
)

notebook_output=$( xrandr | head -n2 | tail -n1 | awk '{ print $1 }' )
hdmi_output=$( xrandr | grep 'HDMI.* connected' | head -n1 | awk '{ print $1 }' )
dvi_output=$( xrandr | grep 'DVI.* connected' | head -n1 | awk '{ print $1 }' )
vga_output=VGA1

guess_display() {
  if xrandr | grep 'VGA.* connected'; then
    select_display VGA
  elif xrandr | grep 'HDMI.* connected'; then
    select_display HDMI
  fi
}

select_display() {
  case $1 in
    guess )
      guess_display ;;
    notebook )
      xrandr --output $notebook_output --auto --output $hdmi_output --off --output $vga_output --off ;;
    notebook-HDMI )
      xrandr --output $hdmi_output --auto --primary --output $vga_output --off --output $dvi_output --off --output $notebook_output --auto --below $hdmi_output ;;
    HDMI )
      xrandr --output $hdmi_output --auto --primary --output $vga_output --off --output $dvi_output --off --output $notebook_output --off ;;
    HDMI-DVI )
      xrandr --output $hdmi_output --auto --primary --output $dvi_output --auto --left-of $hdmi_output --output $notebook_output --off ;;
    DVI )
      xrandr --output $dvi_output --auto --primary --output $vga_output --off --output $hdmi_output --off --output $notebook_output --off ;;
    VGA )
      xrandr --output $vga_output --auto --output $notebook_output --off ;;
  esac
}

if [[ $1 ]]; then
  select_display "$1"
else
  select_display "$( printf "%s\n" "${options[@]}" | rofi -dmenu -i -p 'â†  ' )"
fi
