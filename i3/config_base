# Apps
bindsym $m+1 exec "i3_focus_or_run 'Google-chrome' 'google-chrome --force-device-scale-factor=1'"
bindsym $m+2 exec "i3_focus_or_run 'Sublime_text' 'subl -n'"
bindsym $m+3 exec "i3_focus_or_run 'Xfce4-terminal' 'xfce4-terminal --command=\\"tmux -2\\"'"
bindsym $m+t exec "i3_focus_or_run 'Thunar' 'thunar'"

# Back and forth
bindsym $m+4 exec "i3_focus_pinned -w $ico_folder -c Doublecmd -x doublecmd"
bindsym $m+5 exec "i3_focus_pinned -w $ico_mail -c Thunderbird -x thunderbird"
bindsym $m+s exec "i3_focus_pinned -w $ico_slack -c Google-chrome -x 'while read url; do (google-chrome --force-device-scale-factor=1 --app=$url &); done < ~/Dropbox/ubuntu/various_configs/slack_channels.txt'"
bindsym $m+g exec "i3_focus_pinned -w $ico_gimp -c Gimp -x gimp"
bindsym $m+w exec "i3_focus_pinned -w $ico_whatsapp -i web.whatsapp.com -c Google-chrome -x 'google-chrome --force-device-scale-factor=1 --app=https://web.whatsapp.com/'"
bindsym $m+x exec "i3_focus_pinned -w $ico_calendar -c Google-chrome -x 'while read url; do (google-chrome --force-device-scale-factor=1 --app=$url &); done < ~/Dropbox/ubuntu/various_configs/calendar_urls.txt'"
bindsym $m+m exec "i3_focus_pinned -w $ico_music -c Spotify -x spotify"
bindsym $m+z exec "i3_focus_pinned -w $ico_code -c Google-chrome -x 'google-chrome --force-device-scale-factor=1 --new-window https://github.com/issues?q=is%3Aissue+assignee%3Amreq+is%3Aopen'"
bindsym $m+b exec "i3_focus_pinned -w $ico_game"

