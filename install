#!/bin/bash

create_symlink() {
  test -h $2 || ( rm -rf $2 && mkdir -p $( dirname $2 ) && ln -s ~/.dotfiles/$1 $2 )
}

create_symlink git/.gitconfig ~/.gitconfig

create_symlink git/ignore ~/.config/git/ignore

create_symlink bash/.bashrc ~/.bashrc

create_symlink bash/.profile ~/.profile

create_symlink X/.Xdefaults ~/.Xdefaults

create_symlink doublecmd/doublecmd.xml ~/.config/doublecmd/doublecmd.xml

create_symlink doublecmd/shortcuts.scf ~/.config/doublecmd/shortcuts.scf

create_symlink gtk/.gtkrc-2.0 ~/.gtkrc-2.0

create_symlink gtk/gtk-3.0 ~/.config/gtk-3.0

create_symlink X/.inputrc ~/.inputrc

create_symlink X/.screenrc ~/.screenrc

create_symlink tmux/.tmux.conf ~/.tmux.conf